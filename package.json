{
  "name": "@gnosis.pm/owl-token",
  "version": "0.7.0",
  "description": "The OWL token and related smart contracts",
  "main": "index.js",
  "scripts": {
    "rpc": "ganache-cli -d --mnemonic 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' --defaultBalanceEther '500'",
    "prepack": "npm run restore",
    "test": "truffle test",
    "truffle": "truffle",
    "networks-extract": "node src/extract_network_info.js",
    "networks-inject": "node src/inject_network_info.js",
    "networks-inject-dep": "node src/inject_network_info_deps.js",
    "networks-reset": "mkdir -p build/contracts && truffle networks --clean && npm run networks-inject",
    "networks": "truffle networks",
    "compile-todo": "eslint --fix . && eslint . && truffle compile",
    "compile": "truffle compile",
    "restore": "npm run compile && npm run networks-reset",
    "postinstall": "npm install @gnosis.pm/util-contracts truffle-hdwallet-provider",
    "migrate-gno": "cd node_modules/@gnosis.pm/gno-token && npm run migrate",
    "migrate-utils": "cd node_modules/@gnosis.pm/util-contracts && npm run migrate",
    "migrate-dep": "npm run migrate-utils && npm run networks-inject-dep && npm run migrate-gno",
    "migrate": "truffle migrate",
    "migrate-all": "npm run migrate-dep && npm run migrate",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gnosis/owl-token.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/gnosis/owl-token/issues"
  },
  "homepage": "https://github.com/gnosis/owl-token#readme",
  "dependencies": {
    "@gnosis.pm/gno-token": "^0.3.0",
    "@gnosis.pm/util-contracts": "^0.2.11"
  },
  "devDependencies": {
    "@digix/tempo": "^0.2.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "ganache-cli": "^6.1.0",
    "truffle": "4.1.5",
    "truffle-contract": "^3.0.5",
    "truffle-flattener": "^1.2.5",
    "truffle-hdwallet-provider": "0.0.5"
  }
}
